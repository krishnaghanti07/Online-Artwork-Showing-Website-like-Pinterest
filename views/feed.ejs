<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">

        <div class="cards flex flex-wrap gap-10">

            <% posts.forEach(function(elem) { %>

                <div class="card w-40">
    
                    <div class="w-full h-48 bg-zinc-700 rounded-lg overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
    
                    <h4 class="mt-3 text-sm"><%= elem.title %></h4>
                    
                    <h5 class="mt-1 text-xs opacity-50"><%= elem.description %></h5>
                    
                    <h4 class="mt-2 font-semibold text-xs">@<%= elem.user.username %></h4>
                    
                </div>

            <% }) %>
            
        </div>

    </div>

<% include ./partials/footer.ejs %>